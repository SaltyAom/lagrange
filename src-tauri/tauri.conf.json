{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Lagrange",
	"version": "0.1.0",
	"identifier": "com.saltyaom.lagrange.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"macOSPrivateApi": true,
		"windows": [
			{
				"title": "Lagrange",
				"transparent": true,
				"hiddenTitle": true,
				"titleBarStyle": "Overlay",
				"skipTaskbar": true,
				"windowEffects": {
					"effects": ["light", "mica", "acrylic", "blur"],
					"state": "active"
				},
				"visible": false,
				"width": 600,
				"height": 400,
				"minWidth": 600,
				"minHeight": 400
			}
		],
		"security": {
			"csp": null,
			"pattern": {
				"use": "brownfield"
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
